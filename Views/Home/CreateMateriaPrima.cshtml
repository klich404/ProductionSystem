@model MateriaPrima

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Añadir Materia Prima</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Color" class="form-label mt-4"></label>
            <input type="text" name="color" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Tela" class="form-label mt-4"></label>
            <select asp-for="Tela" class="form-select" id="exampleSelect1">
                @foreach (var t in ViewBag.Telas)
                {
                    <option>@t.Nombre</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Añadir</button>
        <a asp-action="Index" class="btn btn-secondary" style="width:150px">Volver</a>
    </div>
</form>